<UserControl x:Class="MediTech.Views.EditStudyDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d"
             DataContext="{Binding Path=EditStudyDetailsViewModel,Source={StaticResource Locator}}"
             d:DesignHeight="520" d:DesignWidth="700">
    <Grid>
        <dxlc:LayoutControl Orientation="Vertical">
            <dxlc:LayoutItem>
                <TextBlock Text="แก้ไขรายละเอียดการตรวจ X-ray" Margin="10,0,0,0" FontSize="16" FontWeight="Bold"/>
            </dxlc:LayoutItem>

            <dxlc:LayoutGroup Orientation="Horizontal">
                <dxlc:LayoutItem Label="Study UID" LabelPosition="Top">
                    <dxe:TextEdit Text="{Binding SelectedStudy.StudyInstanceUID}" IsReadOnly="True"/>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem Label="HN" LabelPosition="Top">
                    <dxe:TextEdit Text="{Binding SelectedStudy.PatientID}" IsReadOnly="True"/>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem Label="ชื่อผู้ป่วย" LabelPosition="Top">
                    <dxe:TextEdit Text="{Binding SelectedStudy.PatientName}" IsReadOnly="True"/>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem Label="Modality" LabelPosition="Top">
                    <dxe:TextEdit Text="{Binding ModalitiesInStudy}"/>
                </dxlc:LayoutItem>
            </dxlc:LayoutGroup>

            <dxlc:LayoutGroup Orientation="Vertical">
                <dxlc:LayoutItem Label="อวัยวะที่ตรวจ" LabelPosition="Top">
                    <dxe:TextEdit Text="{Binding BodyPartsInStudy}"/>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem Label="รายละเอียดการตรวจ" LabelPosition="Top">
                    <dxe:TextEdit Text="{Binding StudyDescription}"/>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem Label="หมายเหตุผู้ป่วย" LabelPosition="Top">
                    <dxe:TextEdit Text="{Binding PatientComments}"/>
                </dxlc:LayoutItem>
            </dxlc:LayoutGroup>

            <dxlc:LayoutItem Label="สรุปการเปลี่ยนแปลง" LabelPosition="Top" Visibility="{Binding HasChanges, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer Height="120">
                    <TextBlock Text="{Binding ChangeSummary}" TextWrapping="Wrap"/>
                </ScrollViewer>
            </dxlc:LayoutItem>

            <dxlc:LayoutGroup Orientation="Horizontal">
                <dx:SimpleButton Content="ยกเลิก" Width="90" Height="30" Command="{Binding CancelChangesCommand}"/>
                <dx:SimpleButton Content="บันทึก" Width="100" Height="30" Command="{Binding SaveChangesCommand}" IsEnabled="{Binding IsAuthorized}"/>
            </dxlc:LayoutGroup>

            <dxlc:LayoutGroup Orientation="Vertical">
                <TextBlock Text="ประวัติการแก้ไข (ล่าสุดก่อน)" FontWeight="Bold"/>
                <dxe:ListBoxEdit ItemsSource="{Binding AuditHistory}" Height="160">
                    <dxe:ListBoxEdit.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding ModifiedDttm}"/>
                                <TextBlock Text="{Binding ModifiedByName}"/>
                                <TextBlock Text="{Binding FieldName}"/>
                                <TextBlock Text="{Binding OldValue}"/>
                                <TextBlock Text="{Binding NewValue}"/>
                            </StackPanel>
                        </DataTemplate>
                    </dxe:ListBoxEdit.ItemTemplate>
                </dxe:ListBoxEdit>
            </dxlc:LayoutGroup>
        </dxlc:LayoutControl>
    </Grid>
</UserControl>


