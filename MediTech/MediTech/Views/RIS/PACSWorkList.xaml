                                                    <dxg:TableView x:Name="view2" NavigationStyle="Row" 
                                       ShowGroupPanel="False"/>
                                                </dxg:GridControl.View>
                                            </dxg:GridControl>
                                        </dxdo:LayoutPanel>
                                        <dxdo:LayoutPanel x:Name="MoviePicturesPanel"
                                          Caption="Series"
                                          ItemWidth="90" 
                                          AllowClose="False" 
                                          ShowCloseButton="False" 
                                      Background="Transparent">
                                            <dxe:ListBoxEdit x:Name="listNote" SelectionMode="Multiple"
                                     ItemsSource="{Binding ImageSeries}"
                                     HorizontalContentAlignment="Stretch" 
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                                <dxe:ListBoxEdit.ItemTemplate>
                                                    <DataTemplate>
                                                        <Image Stretch="Fill" Width="64"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="5"
                                           Source="{Binding Path=ImageSources,Converter={StaticResource ImageConvert}}"
                                           Height="64"/>
                                                    </DataTemplate>
                                                </dxe:ListBoxEdit.ItemTemplate>
                                            </dxe:ListBoxEdit>
                                        </dxdo:LayoutPanel>
                                    </dxdo:LayoutGroup>
                                </dxdo:DockLayoutManager>-->

                                <dxlc:LayoutGroup >
                                    <dx:SimpleButton Command="{Binding EditStudyCommand}" 
                                     Content="Edit Study" Width="90" 
                                     Height="25" HorizontalAlignment="Left" />
                                    
                                    <dx:SimpleButton Command="{Binding MicroDicomCommand}" 
                                                     IsEnabled="{Binding IsEnabledMicroDiom}"
                                     Content="Micro Dicom" Width="90" 
                                     Height="25" HorizontalAlignment="Right" />
                                    <dx:SimpleButton Command="{Binding CDBufferCommand}"
                                                     IsEnabled="{Binding IsEnabledCDBuffer}"
                                     Content="CD-R Buffer" Width="85" 
                                     Height="25" HorizontalAlignment="Right" />
                                </dxlc:LayoutGroup>
                                <dxlc:LayoutItem Visibility="{Binding IsVisibilityProgressBar}">
                                    <ProgressBar Height="15"  Margin="10,0,10,0" Name="progressBar1"/>
                                </dxlc:LayoutItem>
                            </dxlc:LayoutGroup>
                        </dxdo:LayoutPanel>
                    </dxdo:LayoutGroup>

                    <dxdo:DockLayoutManager.AutoHideGroups>
                        <dxdo:AutoHideGroup DockType="Right">
                            <dxdo:LayoutPanel x:Name="pnlCDBuffer" Caption="CD-R Buffer List" ItemWidth="500" AllowClose="False"
                                          CaptionImage="/MediTech;component/Resources/Images/Other/CD-Icon.png">
                                <dxlc:LayoutControl Orientation="Vertical">
                                    <dxg:GridControl x:Name="grdCDBuffer" ItemsSource="{Binding CDRBufferList}"
                                         SelectedItem="{Binding SelectCDRBuffer}">
                                        <dxg:GridControl.Columns>
                                            <dxg:GridColumn Width="40" >
                                                <dxg:GridColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Image Width="25" Height="25" Stretch="UniformToFill"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"                                  
                                   Cursor="Hand"
                                   ToolTip="ลบข้อมูล"
                                   Source="/MediTech;component/Resources/Images/Action/delete.png">
                                                            <i:Interaction.Triggers>
                                                                <i:EventTrigger  EventName="MouseLeftButtonDown">
                                                                    <mvvm:EventToCommand Command="{Binding View.DataContext.DeleteCDBufferCommand}" />
                                                                </i:EventTrigger>
                                                            </i:Interaction.Triggers>
                                                            <Image.Style>
                                                                <Style TargetType="{x:Type Image}">
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="OpacityMask" Value="#A2000000"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Image.Style>
                                                        </Image>
                                                    </DataTemplate>
                                                </dxg:GridColumn.CellTemplate>
                                            </dxg:GridColumn>
                                            <dxg:GridColumn FieldName="No" Width="30" />
                                            <dxg:GridColumn Header="BN" FieldName="PatientID" ReadOnly="True" Width="70"/>
                                            <dxg:GridColumn Name="colPatientName" FieldName="PatientName"
                                                Header="PatientName"  ReadOnly="True">
                                            </dxg:GridColumn>
                                            <dxg:GridColumn  FieldName="OtherID"
                                                Header="OtherID"  ReadOnly="True">
                                            </dxg:GridColumn>
                                            <dxg:GridColumn Header="Studay ID" FieldName="StudyID" ReadOnly="True"/>
                                            <dxg:GridColumn Header="Series No" FieldName="SeriesNumber">
                                                <dxg:GridColumn.EditSettings>
                                                    <dxe:TextEditSettings HorizontalContentAlignment="Left"/>
                                                </dxg:GridColumn.EditSettings>
                                            </dxg:GridColumn>
                                            <dxg:GridColumn Header="Modality" FieldName="Modality"/>
                                        </dxg:GridControl.Columns>
                                        <dxg:GridControl.View>
                                            <dxg:TableView x:Name="gvCDBuffer"  ShowGroupPanel="False" AllowBestFit="True" 
                                               BestFitArea="All"
                                               BestFitMode="AllRows" 
                                               ShowIndicator="True"/>
                                        </dxg:GridControl.View>
                                        <dxg:GridControl.DetailDescriptor>
                                            <dxg:DataControlDetailDescriptor ItemsSourceBinding="{Binding Instances}" ShowHeader="False">
                                                <dxg:GridControl Name="grdInstanceDetail"
                                                                 SelectedItem="{Binding SelectInstancesCopy}">
                                                    <dxg:GridColumn Width="40" >
                                                        <dxg:GridColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <Image Width="25" Height="25" Stretch="UniformToFill"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"                                  
                                   Cursor="Hand"
                                   ToolTip="ลบข้อมูล"
                                   Source="/MediTech;component/Resources/Images/Action/delete.png">
                                                                    <i:Interaction.Triggers>
                                                                        <i:EventTrigger  EventName="MouseLeftButtonDown">
                                                                            <mvvm:EventToCommand Command="{Binding Path=DataContext.DeleteInstanceCommand,Mode=Default,RelativeSource={RelativeSource AncestorType={x:Type vm:PACSWorkList}}}" />
                                                                        </i:EventTrigger>
                                                                    </i:Interaction.Triggers>
                                                                    <Image.Style>
                                                                        <Style TargetType="{x:Type Image}">
                                                                            <Style.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter Property="OpacityMask" Value="#A2000000"/>
                                                                                </Trigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Image.Style>
                                                                </Image>
                                                            </DataTemplate>
                                                        </dxg:GridColumn.CellTemplate>
                                                    </dxg:GridColumn>
                                                    <dxg:GridColumn Header="Instance No" ReadOnly="True" FieldName="InstanceNumber"/>
                                                    <dxg:GridColumn Header="Frames" ReadOnly="True" FieldName="NumberOfFrames" />
                                                    <dxg:GridColumn Header="File Size" ReadOnly="True" FieldName="FileSizeDisplay" />
                                                    <dxg:GridControl.View>
                                                        <dxg:TableView ShowGroupPanel="False" />
                                                    </dxg:GridControl.View>
                                                </dxg:GridControl>
                                            </dxg:DataControlDetailDescriptor>
                                        </dxg:GridControl.DetailDescriptor>
                                    </dxg:GridControl>

                                    <dxlc:LayoutGroup Orientation="Horizontal">
                                        <dx:SimpleButton Command="{Binding ViewerOnCDCommand}" 
                                     Content="Viewer On CD" Width="100" 
                                     Height="25" HorizontalAlignment="Right" />

                                        <dx:SimpleButton Command="{Binding ClearBufferCommand}" 
                                     Content="Clear Buffer" Width="100"
                                     Height="25" HorizontalAlignment="Right" />
                                    </dxlc:LayoutGroup>


                                </dxlc:LayoutControl>

                            </dxdo:LayoutPanel>
                        </dxdo:AutoHideGroup>
                    </dxdo:DockLayoutManager.AutoHideGroups>


                </dxdo:DockLayoutManager>
            </dxlc:LayoutGroup>

        </dxlc:LayoutControl>
    </Grid>
</UserControl>
