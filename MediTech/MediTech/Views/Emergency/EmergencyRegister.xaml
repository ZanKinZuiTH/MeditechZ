<UserControl x:Class="MediTech.Views.EmergencyRegister"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"  
             xmlns:dxco="http://schemas.devexpress.com/winfx/2008/xaml/controls" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:MediTech.Views"
             mc:Ignorable="d"
             xmlns:mvvm="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Platform"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             DataContext="{Binding EmergencyRegisterViewModel,Source={StaticResource Locator}}"
             Name="EmergencyRegisterView"
             d:DesignHeight="600" d:DesignWidth="900">
    <UserControl.Resources>
        <vm:EmergencyMangePatient x:Key="EmergencyMangePatient" x:Name="EmergencyMangePatient" 
                                      IsRegisterPatient="True"/>
        <vm:SearchEmergencyPatient x:Key="SearchEmergencyPatient" x:Name="SearchEmergencyPatient"
                                      SelectBooking="{Binding Path=DataContext.SelectedBooking,Mode=OneWayToSource,RelativeSource={RelativeSource AncestorType={x:Type vm:EmergencyRegister}}}"
                                      SelectedPatientData="{Binding Path=DataContext.SelectedPatient,Mode=OneWayToSource,RelativeSource={RelativeSource AncestorType={x:Type vm:EmergencyRegister}}}"/>
    </UserControl.Resources>
    <Grid>
        <dxco:Wizard x:Name="wizardRegister" SelectedIndex="{Binding SelectPageIndex}">
            <dxco:Wizard.FooterTemplate>
                <DataTemplate>
                    <dxco:WizardDialogFooter>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                                <dx:SimpleButton x:Name="btnReadCard" Width="80" Height="25" 
                                                     Content="อ่านบัตร" Command="{Binding ReadCardCommand}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal" >
                                <dxco:WizardButton Name="btnSkip" Width="80"
                                     Height="25" Content="ข้าม" Command="{Binding SkipCommand}" />
                                <dxco:WizardButton Name="btnNext" Width="80"
                                     Height="25" Content="ถัดไป &gt;" Command="{Binding NextCommand}"/>
                                <dxco:WizardButton Name="btnBack" Width="80"
                                     Height="25" Content="&lt; ย้อนกลับ" Command="{Binding BackCommand}"/>
                                <dxco:WizardButton Name="btnSave" Width="80"
                                     Height="25" Content="ลงทะเบียน" Command="{Binding Path=DataContext.RegisterCommand,Source={StaticResource EmergencyMangePatient}}"/>
                                <dxco:WizardButton Name="btnSend" Width="80"
                                     Height="25" Content="ส่งตรวจ" Command="{Binding Path=DataContext.RegisterToDoctorCommand,Source={StaticResource EmergencyMangePatient}}"/>
                            </StackPanel>
                        </Grid>
                    </dxco:WizardDialogFooter>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding Path=DataContext.IsManageRegister,Mode=TwoWay,RelativeSource={RelativeSource AncestorType={x:Type vm:EmergencyRegister}}}" Value="True">
                            <Setter Property="Visibility" TargetName="btnSkip" Value="Collapsed"/>
                            <Setter Property="Visibility" TargetName="btnNext" Value="Collapsed"/>
                            <!--<Setter Property="Visibility" TargetName="btnSend" Value="Visible"/>-->
                            <Setter Property="Visibility" TargetName="btnBack" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=DataContext.IsManageRegister,Mode=TwoWay,RelativeSource={RelativeSource AncestorType={x:Type vm:EmergencyRegister}}}" Value="False">
                            <Setter Property="Visibility" TargetName="btnSkip" Value="Visible"/>
                            <Setter Property="Visibility" TargetName="btnNext" Value="Visible"/>
                            <Setter Property="Visibility" TargetName="btnSave" Value="Collapsed"/>
                            <Setter Property="Visibility" TargetName="btnSend" Value="Collapsed"/>
                            <Setter Property="Visibility" TargetName="btnBack" Value="Collapsed"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </dxco:Wizard.FooterTemplate>
            <dxco:WizardPage Name="SearchPage" Content="{StaticResource SearchEmergencyPatient}"
                             ShowBack="False"/>
            <dxco:WizardPage Name="ManagePage" Content="{StaticResource EmergencyMangePatient}"/>
        </dxco:Wizard>
    </Grid>
</UserControl>
