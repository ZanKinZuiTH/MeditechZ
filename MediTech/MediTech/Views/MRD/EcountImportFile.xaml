            <dxlc:LayoutItem>
                <!--<dx:SimpleButton HorizontalAlignment="Right" Width="80" Command="{Binding SearchCommand}"
                                     Height="25" Content="ค้นหา"/>-->
            </dxlc:LayoutItem>
            <dxlc:LayoutItem>
                <ProgressBar Height="15"   Name="progressBar1"/>
            </dxlc:LayoutItem>
            <dxg:GridControl ItemsSource="{Binding AdjustStock}"
                             SelectedItem="{Binding SelectAdjustStock}">
                <dxg:GridControl.Columns>
                    <dxg:GridColumn Header="รหัสรายการ" FieldName="ItemCode" ReadOnly="True"/>
                    <dxg:GridColumn Header="รายการของ" FieldName="ItemName" ReadOnly="True"/>
                    <dxg:GridColumn Header="Store" FieldName="StoreName" ReadOnly="True"/>
                    <dxg:GridColumn Header="BatchID" FieldName="BatchID" ReadOnly="True"/>
                    <dxg:GridColumn Header="จำนวนก่อนปรับ" FieldName="ActualQuantity" ReadOnly="True"/>
                    <dxg:GridColumn Header="จำนวนที่ปรับ" FieldName="QuantityAdjusted" ReadOnly="True"/>
                    <dxg:GridColumn Header="จำนวนหลังปรับ" FieldName="AdjustedQuantity" ReadOnly="True"/>
                    <dxg:GridColumn Header="หน่วย" FieldName="AdjustedUnit" ReadOnly="True"/>
                    <dxg:GridColumn Header="ราคา" FieldName="ItemCost" ReadOnly="True"/>
                    <dxg:GridColumn Header="วันหมดอายุ" FieldName="ExpiryDate" ReadOnly="True"/>
