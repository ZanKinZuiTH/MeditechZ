            <dxlc:LayoutItem >
                <dxlc:LayoutItem.Label>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="*" FontSize="15" Margin="0,-10,0,0"
                                           Foreground="Red"/>
                        <TextBlock Text="Payor" />
                    </StackPanel>
                </dxlc:LayoutItem.Label>
                <dxg:LookUpEdit Name="lkePayorName" ItemsSource="{Binding PayorDetailSource}" 
                                      SelectedItem="{Binding SelectedPayorDetail}"
                                      ValueMember="PayorDetailUID"
                                      DisplayMember="PayorName"
                                      AllowNullInput="True"
                                      AutoComplete="True" 
                                      ImmediatePopup="True"
                                      FindButtonPlacement = "Popup"
                                      FindMode = "Always"
                                      PopupMinHeight="100"
                                      PopupMinWidth="100"
                                      PopupHeight="300" 
                                      IsPopupAutoWidth="True"
                                      AutoPopulateColumns="False">
                    <dxg:LookUpEdit.PopupContentTemplate>
                        <ControlTemplate>
                            <dxg:GridControl x:Name="PART_GridControl"  >
                                <dxg:GridControl.Columns>
                                    <dxg:GridColumn Name="colPayorName" FieldName="PayorName"/>
                                </dxg:GridControl.Columns>
                                <dxg:GridControl.View>
                                    <dxg:TableView
                        Name="View"  ShowColumnHeaders="False"
                        AutoWidth="True"
                        ShowGroupedColumns="False" >
                                    </dxg:TableView>
                                </dxg:GridControl.View>
                            </dxg:GridControl>
                        </ControlTemplate>
                    </dxg:LookUpEdit.PopupContentTemplate>
                    <dxg:LookUpEdit.StyleSettings>
                        <dxg:SearchLookUpEditStyleSettings/>
                    </dxg:LookUpEdit.StyleSettings>
                </dxg:LookUpEdit>
            </dxlc:LayoutItem>
            <dxlc:LayoutItem >
                <dxlc:LayoutItem.Label>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="*" FontSize="15" Margin="0,-10,0,0"
                                           Foreground="Red"/>
                        <TextBlock Text="Agreement" />
                    </StackPanel>
                </dxlc:LayoutItem.Label>
                <dxe:ComboBoxEdit DisplayMember="Name" 
                                      ValueMember="PayorAgreementUID"
                                      ItemsSource="{Binding PayorAgreementSource}"
                                      SelectedItem="{Binding SelectedPayorAgreement}"/>
            </dxlc:LayoutItem>
            <dxlc:LayoutItem >
                <dxlc:LayoutItem.Label>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="*" FontSize="15" Margin="0,-10,0,0"
                                           Foreground="Red"/>
                        <TextBlock Text="ความสำคัญ" />
                    </StackPanel>
                </dxlc:LayoutItem.Label>
                <dxe:ComboBoxEdit DisplayMember="Display" 
                                      ValueMember="Key"
                                      ItemsSource="{Binding PrioritySource}"
                                      SelectedItem="{Binding SelectedPriority}"/>
            </dxlc:LayoutItem>
            <dxlc:LayoutItem Label="แพทย์">
                <dxe:ComboBoxEdit DisplayMember="FullName"
                                      NullValueButtonPlacement="EditBox"
                                      ValueMember="CareproviderUID"
                                      ItemsSource="{Binding CareproviderSource}"
                                      SelectedItem="{Binding SelectedCareprovider}"/>
            </dxlc:LayoutItem>
            <dxlc:LayoutItem Label="หมายเหตุถึงแพทย์" LabelVerticalAlignment="Top">
                <TextBox Name="txtDetail"   Text="{Binding CommentDoctor,Mode=TwoWay}"
                                                     Height="50"
                                                     AcceptsReturn="True"             
                                                     TextWrapping="Wrap" />
            </dxlc:LayoutItem>

            <dxlc:LayoutGroup VerticalAlignment="Bottom">
                <dx:SimpleButton Width="80" Command="{Binding SaveCommand}"
                             VerticalAlignment="Bottom"
                             HorizontalAlignment="Right"
                                     Height="25" Content="บันทึก"/>
                <dx:SimpleButton Width="80" Command="{Binding CancelCommand}"
                             VerticalAlignment="Bottom"
                             Visibility="{Binding VisibilityCancel}"
                             HorizontalAlignment="Right"
                                     Height="25" Content="ยกเลิก"/>
            </dxlc:LayoutGroup>

        </dxlc:LayoutControl>
    </Grid>
</UserControl>
