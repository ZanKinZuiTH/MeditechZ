<Application x:Class="MediTech.App" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="LoginScreen.xaml"
             xmlns:themes="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys"
             xmlns:dxi="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
             xmlns:helpers="http://schemas.devexpress.com/winfx/2008/xaml/editors/internal"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" d1p1:Ignorable="d"
             xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <Application.Resources>
        <ResourceDictionary>
            <vm:ViewModelLocator x:Key="Locator" d:IsDataSource="True" xmlns:vm="clr-namespace:MediTech.ViewModels"/>
            <ControlTemplate  x:Key="ReferencevalueTemplate" x:Name="ReferencevalueTemplate">
                <dxg:GridControl x:Name="PART_GridControl"  >
                    <dxg:GridControl.Columns>
                        <dxg:GridColumn Name="colDesc" FieldName="Display"/>
                    </dxg:GridControl.Columns>
                    <dxg:GridControl.View>
                        <dxg:TableView
                        Name="View"  ShowColumnHeaders="False"
                        AutoWidth="True"
                        ShowGroupedColumns="False" >
                        </dxg:TableView>
                    </dxg:GridControl.View>
                </dxg:GridControl>
            </ControlTemplate>
            <ControlTemplate  x:Key="HealthOrganisationTemplate" x:Name="HealthOrganisationTemplate">
                <dxg:GridControl x:Name="PART_GridControl"  >
                    <dxg:GridControl.Columns>
                        <dxg:GridColumn Name="colDesc" FieldName="Name"/>
                    </dxg:GridControl.Columns>
                    <dxg:GridControl.View>
                        <dxg:TableView
                        Name="View"  ShowColumnHeaders="False"
                        AutoWidth="True"
                        ShowGroupedColumns="False" >
                        </dxg:TableView>
                    </dxg:GridControl.View>
                </dxg:GridControl>
            </ControlTemplate>
            <ControlTemplate  x:Key="VendorTemplate" x:Name="VendorTemplate">
                <dxg:GridControl x:Name="PART_GridControl"  >
                    <dxg:GridControl.Columns>
                        <dxg:GridColumn Name="colDesc" FieldName="CompanyName"/>
                    </dxg:GridControl.Columns>
                    <dxg:GridControl.View>
                        <dxg:TableView
                        Name="View"  ShowColumnHeaders="False"
                        AutoWidth="True"
                        ShowGroupedColumns="False" >
                        </dxg:TableView>
                    </dxg:GridControl.View>
                </dxg:GridControl>
            </ControlTemplate>
            <ControlTemplate  x:Key="BillableItemTemplate" x:Name="BillableItemTemplate">
                <dxg:GridControl x:Name="PART_GridControl"  >
                    <dxg:GridControl.Columns>
                        <dxg:GridColumn Name="colDesc" FieldName="ItemName"/>
                    </dxg:GridControl.Columns>
                    <dxg:GridControl.View>
                        <dxg:TableView
                        Name="View"  ShowColumnHeaders="False"
                        AutoWidth="True"
                        ShowGroupedColumns="False" >
                        </dxg:TableView>
                    </dxg:GridControl.View>
                </dxg:GridControl>
            </ControlTemplate>
            <ControlTemplate  x:Key="OrderSetTemplate" x:Name="OrderSetTemplate">
                <dxg:GridControl x:Name="PART_GridControl"  >
                    <dxg:GridControl.Columns>
                        <dxg:GridColumn Name="colDesc" FieldName="Name"/>
                    </dxg:GridControl.Columns>
                    <dxg:GridControl.View>
                        <dxg:TableView
                        Name="View"  ShowColumnHeaders="False"
                        AutoWidth="True"
                        ShowGroupedColumns="False" >
                        </dxg:TableView>
                    </dxg:GridControl.View>
                </dxg:GridControl>
            </ControlTemplate>
            <ControlTemplate  x:Key="PackageTemplate" x:Name="PackageTemplate">
                <dxg:GridControl x:Name="PART_GridControl"  >
                    <dxg:GridControl.Columns>
                        <dxg:GridColumn Name="colDesc" FieldName="PackageName"/>
                    </dxg:GridControl.Columns>
                    <dxg:GridControl.View>
                        <dxg:TableView
                        Name="View"  ShowColumnHeaders="False"
                        AutoWidth="True"
                        ShowGroupedColumns="False" >
                        </dxg:TableView>
                    </dxg:GridControl.View>
                </dxg:GridControl>
            </ControlTemplate>
            <ControlTemplate x:Key="{themes:TimePickerThemeKey ResourceKey=Template, IsThemeIndependent = true}" 
                         TargetType="{x:Type dxe:TimePicker}">
                <Grid Background="{TemplateBinding Background}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <helpers:TimePickerClock Grid.Row="0" x:Name="PART_Clock" 
                                         Style="{dxi:ThemeResource {themes:TimePickerThemeKey ResourceKey=ClockStyle}}"
                                         DateTime="{Binding Path=DateTime, RelativeSource={RelativeSource TemplatedParent}}"
                                         VisibleMaskParts="{Binding Path=VisibleMaskParts, RelativeSource={RelativeSource TemplatedParent}}" />
                    <dxe:ButtonEdit Grid.Row="1" 
                                EditValue="{Binding Path=DateTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, 
                        RelativeSource={RelativeSource TemplatedParent}}" 
                                AllowDefaultButton="false" 
                                
                                Mask="HH:mm:ss" 
                                
                                MaskUseAsDisplayFormat="True"
                                MaskType="DateTimeAdvancingCaret" 
                                InvalidValueBehavior="AllowLeaveEditor" 
                                helpers:MVVMFocusBehavior.IsFocused="{Binding Path=IsKeyboardFocusWithin, 
                        RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}" 
                                Style="{dxi:ThemeResource {themes:TimePickerThemeKey ResourceKey=TimeEditBoxStyle}}"
                                HorizontalAlignment="Center">
                        <dxmvvm:Interaction.Behaviors>
                            <helpers:TimePickerClockEditorBehavior MinValue="{Binding Path=MinValue, 
                            RelativeSource={RelativeSource TemplatedParent}}" 
                                                               MaxValue="{Binding Path=MaxValue, 
                            RelativeSource={RelativeSource TemplatedParent}}" />
                        </dxmvvm:Interaction.Behaviors>
                        <dxe:SpinButtonInfo IsDefaultButton="True" />
                    </dxe:ButtonEdit>
                </Grid>
            </ControlTemplate>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary  Source="Resources/Style/AutoCompleteStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>