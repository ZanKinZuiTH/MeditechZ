<UserControl x:Class="MediTech.CustomControl.Banner.PatientBanner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d" 
             BorderThickness="1" Height="110" 
             d:DesignHeight="300" d:DesignWidth="900" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="TextBlock.FontWeight" Value="Bold"/>
            <Setter Property="TextBlock.FontSize" Value="13"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="NormalText" TargetType="{x:Type TextBlock}">
            <Setter Property="TextBlock.FontWeight" Value="Bold"/>
            <Setter Property="TextBlock.Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ImageOnMouse" TargetType="{x:Type Image}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="OpacityMask" Value="#A2000000"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>
    <ScrollViewer  ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                   ScrollViewer.VerticalScrollBarVisibility="Auto" >
        <Grid Name="GridContenxt" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <Border Width="105" Margin="10,0,0,0" Grid.Column="0" Grid.RowSpan="3"
                    Height="100" 
                    VerticalAlignment="Top"
                    Background="White"
                    BorderBrush="Gray"
                    BorderThickness="1">
                <Border.BitmapEffect>
                    <DropShadowBitmapEffect Direction="310"
                                            Opacity="0.7"
                                            ShadowDepth="8"
                                            Softness="0.2"
                                            Color="Gray" />
                </Border.BitmapEffect>
                <dxe:ImageEdit Height="85" Margin="2,3,2,0" Name="patientImage"
                               IsReadOnly="True"
                           VerticalAlignment="Top" Stretch="Fill">
                    <dxe:ImageEdit.ToolTip>
                        <Image x:Name="patientImageTootip"  Width="250" Height="250" Stretch="Fill"/>
                    </dxe:ImageEdit.ToolTip>
                </dxe:ImageEdit>
            </Border>



            <StackPanel Panel.ZIndex="-1" Orientation="Horizontal" Grid.Column="1" Grid.Row="0" Margin="20,0,0,0"  >
                <TextBlock Name="txtPateintName" Style="{StaticResource NormalText}" FontSize="16"  />
                <TextBlock Text="(" FontSize="16"/>
                <TextBlock Name="txtHN" Style="{StaticResource NormalText}" FontSize="16"/>
                <TextBlock Text=")" FontSize="16" />
                <TextBlock Text="อายุ:" Margin="10,0,0,0" FontWeight="Thin" />
                <TextBlock Name="txtAge" Margin="5,0,0,0" Style="{StaticResource NormalText}"/>
                <TextBlock Text="วัน เดือน ปี เกิด:" Margin="5,0,0,0" FontWeight="Thin" />
                <TextBlock Name="txtDateOfBirth" Margin="5,0,0,0" Style="{StaticResource NormalText}"/>
                <!--<TextBlock Text="(Deceased)" Name="txtDeceased" Margin="5,0,0,0" FontWeight="Bold" Foreground="#FFF81010" FontSize="18" Visibility="Collapsed"  />-->

                <StackPanel x:Name="lycIcon" Orientation="Horizontal">
                    <Image Name="imgAllergy" Source="/MediTech;component/Resources/Images/Medical/Allergy.png"
                       Cursor="Hand"
                       Visibility="Collapsed"
                       VerticalAlignment="Center"
                       Width="30" Height="30" Margin="5,0,0,0">
                        <Image.ToolTip>
                            <DataGrid  Name="dtgAllergy" MinHeight="80" 
                                   CanUserAddRows="False" IsReadOnly="True" 
                                   AutoGenerateColumns="False"   Canvas.Right="50"
                                   VerticalGridLinesBrush="LightBlue" HorizontalGridLinesBrush="LightBlue">
                                <DataGrid.Columns >
                                    <DataGridTextColumn Header="ประเภท" Binding="{Binding AllergyClass}"/>
                                    <DataGridTextColumn Header="แพ้"  Binding="{Binding AllergicTo}"/>
                                    <DataGridTemplateColumn Header="อาการที่แพ้" >
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding AllergyDescription}"  TextWrapping="Wrap" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <!--<DataGridTextColumn  Header="อาการที่แพ้"  Binding="{Binding AllergyDescription} "/>-->

                                    <DataGridTextColumn Header="ความรุนแรง"  Binding="{Binding Severity}"/>
                                    <DataGridTextColumn Header="ความเชื่อมั่น"  Binding="{Binding Certanity}"/>
                                    <DataGridTextColumn Header="เวลาบันทึก"  Binding="{Binding CWhen}"/>
                                    <DataGridTextColumn Header="ผู้บันทึก"  Binding="{Binding RecordByName}"/>
                                </DataGrid.Columns>
                            </DataGrid>

                        </Image.ToolTip>
                    </Image>
                    <Image Name="imgVIP" Source="/MediTech;component/Resources/Images/Other/VIP.png"
                       Visibility="Collapsed"
                       Cursor="Hand"
                       Width="30" Height="30" Margin="5,0,0,0">
                        <Image.ToolTip>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="ประเภท VIP : " HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="1" Name="txtVIPType"/>
                                <TextBlock Grid.Row="1" Text="วันเริ่มต้น : " HorizontalAlignment="Right"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Name="txtVIPActiveFrom"/>
                                <TextBlock Grid.Row="2" Text="วันสิ้นสุด : " HorizontalAlignment="Right"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Name="txtVIPActiveTo"/>
                            </Grid>
                        </Image.ToolTip>
                    </Image>
                </StackPanel>

            </StackPanel>

            <StackPanel   Orientation="Horizontal" Panel.ZIndex="-1" Grid.Column="1" Grid.Row="1" Margin="20,-15,0,0" >
                <TextBlock  Text="เพศ:" FontWeight="Thin"/>
                <TextBlock Name="txtGender" Margin="5,0,0,0" Style="{StaticResource NormalText}"/>
                <TextBlock Text="กรุ๊ปเลือด:" Margin="5,0,0,0" FontWeight="Thin"/>
                <TextBlock Name="txtBloodGroup" Margin="5,0,0,0" Style="{StaticResource NormalText}"/>
                <TextBlock Text="น้ำหนัก" Margin="5,0,0,0" FontWeight="Thin"/>
                <TextBlock Name="txtWgt" Margin="5,0,0,0" Style="{StaticResource NormalText}" />
                <TextBlock Text="ส่วนสูง" Margin="5,0,0,0" FontWeight="Thin"/>
                <TextBlock Name="txtHgt" Margin="5,0,0,0" Style="{StaticResource NormalText}" />
                <TextBlock Text="BMI" Margin="5,0,0,0" FontWeight="Thin"/>
                <TextBlock Name="txtBMI" Margin="5,0,0,0" Style="{StaticResource NormalText}" />
                <TextBlock Text="แพทย์:" Margin="5,0,0,0" FontWeight="Thin"/>
                <TextBlock Name="txtCareProvider" Margin="5,0,0,0" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1" Style="{StaticResource NormalText}" />
                <TextBlock Text="สถานที่/แผนก:" Margin="5,0,0,0" FontWeight="Thin"/>
                <TextBlock Name="txtLocation" Margin="5,0,0,0" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1" Style="{StaticResource NormalText}" />
            </StackPanel>

            <StackPanel Panel.ZIndex="-1" Orientation="Horizontal" Grid.Column="1" Grid.Row="2" Margin="20,-15,0,0">
                <TextBlock Text="ที่อยู่:" FontWeight="Thin" />
                <TextBlock Name="txtAddress" Margin="5,0,0,0" Style="{StaticResource NormalText}"/>
                <TextBlock Text="เบอร์โทร:" Margin="5,0,0,0" FontWeight="Thin"/>
                <TextBlock Name="txtPhone" Margin="5,0,0,0" Style="{StaticResource NormalText}"/>
                <TextBlock Text="มือถือ:" Margin="5,0,0,0" FontWeight="Thin"/>
                <TextBlock Name="txtMobile" Margin="5,0,0,0" Style="{StaticResource NormalText}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="2" 
                        HorizontalAlignment="Center">
                <TextBlock Name="txtVisitID"  FontSize="14" 
                           FontStyle="Italic" Foreground="Blue" />

                <!--<TextBlock Name="txtPastVisits"  FontSize="14" Margin="10,0,0,0"
                           FontStyle="Italic"/>-->
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
