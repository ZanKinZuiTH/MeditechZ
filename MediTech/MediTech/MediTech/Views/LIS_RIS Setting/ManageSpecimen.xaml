<UserControl x:Class="MediTech.Views.ManageSpecimen"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"  xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"  xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:mvvm="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Platform"
             xmlns:local="clr-namespace:MediTech.Views"
             DataContext="{Binding Path=ManageSpecimenViewModel,Source={StaticResource Locator}}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid>
        <dxlc:LayoutControl Orientation="Vertical">
            <dxlc:LayoutGroup Orientation="Horizontal">
                <dxlc:LayoutGroup Orientation="Vertical">
                    <dxlc:LayoutGroup>
                        <dxlc:LayoutItem>
                            <dxlc:LayoutItem.Label>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="*" FontSize="15" Margin="0,-10,0,0"
                                           Foreground="Red"/>
                                    <TextBlock Text="Code" />
                                </StackPanel>
                            </dxlc:LayoutItem.Label>
                            <dxe:TextEdit Text="{Binding Code}" IsEnabled="{Binding IsEnabledEdit}"/>
                        </dxlc:LayoutItem>
                    </dxlc:LayoutGroup>
                    <dxlc:LayoutItem>
                        <dxlc:LayoutItem.Label>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="*" FontSize="15" Margin="0,-10,0,0"
                                           Foreground="Red"/>
                                <TextBlock Text="Name" />
                            </StackPanel>
                        </dxlc:LayoutItem.Label>
                        <dxe:TextEdit Text="{Binding SpecimenName}"/>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Label="Type">
                        <dxe:ComboBoxEdit ItemsSource="{Binding SpecimenType}"
                                          DisplayMember="Display"
                                          ValueMember="Key"
                                          SelectedItem="{Binding SelectSpecimenType}"/>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Label="Vol. Collection Required">
                        <dxe:ComboBoxEdit ItemsSource="{Binding CollectionRequired}"
                                          SelectedItem="{Binding SelectCollectionRequired}"
                                          DisplayMember="Display"
                                          ValueMember="Key"/>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutGroup>
                        <dxlc:LayoutItem Label="Volumne To Be Collected">
                            <dxe:TextEdit Text="{Binding VolumenToBeCollection}" Mask="\d{0,9}(\R.\d{0,2})?"  MaskType="RegEx"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem>
                            <dxe:ComboBoxEdit Name="cmbImageType" ItemsSource="{Binding UnitofMeasure}"
                                          DisplayMember="Display"
                                          AllowNullInput="True"                                        
                                          ValueMember="Key"
                                          SelectedItem="{Binding SelectUnitofMeasure}"/>
                        </dxlc:LayoutItem>
                    </dxlc:LayoutGroup>

                </dxlc:LayoutGroup>
                <dxlc:LayoutGroup Orientation="Vertical">
                    <dxlc:LayoutItem Label="Expiry Date">
                        <dxe:DateEdit EditValue="{Binding ExpiryDate}"/>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Label="Colleciton Site">
                        <dxe:ComboBoxEdit ItemsSource="{Binding CollectionSite}"
                                          DisplayMember="Display"
                                          ValueMember="Key"
                                          SelectedItem="{Binding SelectCollectionSite}"/>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Label="Collection Route">
                        <dxe:ComboBoxEdit ItemsSource="{Binding CollectionRoute}"
                                          DisplayMember="Display"
                                          ValueMember="Key"
                                          SelectedItem="{Binding SelectCollectionRoute}"/>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Label="Collection Method">
                        <dxe:ComboBoxEdit ItemsSource="{Binding CollectionMethod}"
                                          DisplayMember="Display"
                                          ValueMember="Key"
                                          SelectedItem="{Binding SelectCollectionMethod}"/>
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>
            </dxlc:LayoutGroup>
            <dxlc:LayoutItem Label="Storage Instruction" LabelVerticalAlignment="Top">
                <dxe:TextEdit Text="{Binding StorageInstruction}" TextWrapping="Wrap" Height="50" AcceptsReturn="True"/>
            </dxlc:LayoutItem>
            <dxlc:LayoutItem Label="Handing Instruction"  LabelVerticalAlignment="Top">
                <dxe:TextEdit Text="{Binding HandingInstruction}"  TextWrapping="Wrap" Height="50" AcceptsReturn="True"/>
            </dxlc:LayoutItem>
            <dxlc:LayoutGroup HorizontalAlignment="Right" VerticalAlignment="Bottom"  Orientation="Horizontal">
                <dxlc:LayoutItem>
                    <dx:SimpleButton Width="80" Command="{Binding SaveCommand}"
                                     Height="25" Content="บันทึก"/>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem>
                    <dx:SimpleButton Width="80" Command="{Binding CancelCommand}"
                                     Height="25" Content="ยกเลิก"/>
                </dxlc:LayoutItem>

            </dxlc:LayoutGroup>
        </dxlc:LayoutControl>
    </Grid>
</UserControl>
