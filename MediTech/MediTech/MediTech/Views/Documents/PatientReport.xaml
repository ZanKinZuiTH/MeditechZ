<UserControl xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"  xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" x:Class="MediTech.Views.PatientReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
              xmlns:mvvm="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Platform"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             DataContext="{Binding Path=PatientReportViewModel,Source={StaticResource Locator}}"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <dxlc:LayoutControl Orientation="Horizontal">
            <dxe:ListBoxEdit ItemsSource="{Binding ListReports}"
                             SelectedItem="{Binding SelectReport}"
                     HorizontalContentAlignment="Stretch"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <mvvm:EventToCommand Command="{Binding ChooseReportCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <dxe:ListBoxEdit.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Cursor="Hand" IsItemsHost="True" Orientation="Horizontal"  />
                    </ItemsPanelTemplate>
                </dxe:ListBoxEdit.ItemsPanel>
                <dxe:ListBoxEdit.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="130" Margin="5,10,5,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Source="/MediTech;component/Resources/Images/Document/Report.png" Width="32" Height="32"/>
                            <TextBlock Grid.Column="1" Text="{Binding Name}" HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       TextWrapping="Wrap"/>
                        </Grid>
                    </DataTemplate>
                </dxe:ListBoxEdit.ItemTemplate>

            </dxe:ListBoxEdit>
        </dxlc:LayoutControl>
    </Grid>
</UserControl>
