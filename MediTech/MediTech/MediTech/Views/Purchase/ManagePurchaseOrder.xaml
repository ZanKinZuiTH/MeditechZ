<UserControl xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"  xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"  xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"  xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" x:Class="MediTech.Views.ManagePurchaseOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mvvm="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Platform"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:cv="clr-namespace:MediTech.Converter"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             mc:Ignorable="d"
             xmlns:vm="clr-namespace:MediTech.Views"
             DataContext="{Binding Path=ManagePurchaseOrderViewModel,Source={StaticResource Locator}}"
             d:DesignHeight="600" d:DesignWidth="900">
    <UserControl.Resources>
        <cv:AddValueConverter x:Key="AddValueConverter" />
        <ControlTemplate x:Key="gridItemMasterTemplate">
            <dxg:GridControl x:Name="PART_GridControl">
                <dxg:GridControl.Columns>
                    <dxg:GridColumn FieldName="Code" Header="รหัส" Width="50"/>
                    <dxg:GridColumn FieldName="Name" Header="ชื่อ" Width="220">
                        <dxg:GridColumn.EditSettings>
                            <dxe:TextEditSettings  TextWrapping="Wrap"/>
                        </dxg:GridColumn.EditSettings>
                    </dxg:GridColumn>
                    <dxg:GridColumn FieldName="ItemType" Header="ประเภท"/>
                </dxg:GridControl.Columns>
                <dxg:GridControl.View>
                    <dxg:TableView Name="view" ShowGroupPanel="False"/>
                </dxg:GridControl.View>

            </dxg:GridControl>
        </ControlTemplate>
    </UserControl.Resources>
    <Grid>
        <dxlc:LayoutControl Orientation="Vertical">
            <dxlc:LayoutGroup View="Tabs">
                <dxlc:LayoutGroup Header="ใบสั่งซื้อ" Orientation="Vertical">
                    <dxlc:LayoutGroup Orientation="Horizontal">
                        <dxlc:LayoutItem >
                            <dxlc:LayoutItem.Label>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="*" FontSize="15" Margin="0,-10,0,0"
                                           Foreground="Red"/>
                                    <TextBlock Text="วันที่" />
                                </StackPanel>
                            </dxlc:LayoutItem.Label>
                            <dxe:DateEdit EditValue="{Binding RequestedDttm}"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="วันที่ส่งของ">
                            <dxe:DateEdit EditValue="{Binding RequiredDttm}"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="สถานประกอบการ">
                            <dxg:LookUpEdit Name="lkeOrganisation" ItemsSource="{Binding Organisations}" 
                                      SelectedItem="{Binding SelectOrganisation}"
                                      ValueMember="HealthOrganisationUID"
                                      DisplayMember="Name"
                                      AllowNullInput="True"
                                      AutoComplete="True" 
                                      ImmediatePopup="True"
                                      FindButtonPlacement = "Popup"
                                      FindMode = "Always"
                                      PopupMinHeight="100"
                                      PopupMinWidth="100"
                                      PopupHeight="400" 
                                      IsPopupAutoWidth="True"
                                      PopupContentTemplate="{StaticResource HealthOrganisationTemplate}"
                                      AutoPopulateColumns="False">
                                <dxg:LookUpEdit.StyleSettings>
                                    <dxg:SearchLookUpEditStyleSettings/>
                                </dxg:LookUpEdit.StyleSettings>
                            </dxg:LookUpEdit>
                        </dxlc:LayoutItem>
                    </dxlc:LayoutGroup>
                    <dxlc:LayoutGroup Orientation="Horizontal">
                        <dxlc:LayoutItem Label="Store">
                            <dxe:ComboBoxEdit Name="cmbStore" 
                                      ItemsSource="{Binding Stores}" 
                                      SelectedItem="{Binding SelectStore}"
                                      ValueMember="StoreUID"
                                      DisplayMember="Name"
                                      AutoComplete="True" 
                                      ImmediatePopup="True"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem >
                            <dxlc:LayoutItem.Label>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="*" FontSize="15" Margin="0,-10,0,0"
                                           Foreground="Red"/>
                                    <TextBlock Text="ผู้จัดจำหน่าย" />
                                </StackPanel>
                            </dxlc:LayoutItem.Label>
                            <dxg:LookUpEdit Name="lkeVendor" ItemsSource="{Binding Vendors}" 
                                      SelectedItem="{Binding SelectVendor}"
                                      ValueMember="VendorDetailUID"
                                      DisplayMember="CompanyName"
                                      AllowNullInput="True"
                                      AutoComplete="True" 
                                      ImmediatePopup="True"
                                      FindButtonPlacement = "Popup"
                                      FindMode = "Always"
                                      PopupMinHeight="100"
                                      PopupMinWidth="100"
                                      PopupHeight="400" 
                                      IsPopupAutoWidth="True"
                                      PopupContentTemplate="{StaticResource VendorTemplate}"
                                      AutoPopulateColumns="False">
                                <dxg:LookUpEdit.StyleSettings>
                                    <dxg:SearchLookUpEditStyleSettings/>
                                </dxg:LookUpEdit.StyleSettings>
                            </dxg:LookUpEdit>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem/>
                    </dxlc:LayoutGroup>
                    <dxg:GridControl x:Name="grdPurchaseItemList" ItemsSource="{Binding PurchaseOrderItem,Mode=TwoWay}"
                                     SelectedItem="{Binding SelectPurchaseOrderItem}">
                        <dxg:GridControl.Columns>
                            <dxg:GridColumn FieldName="No" Width="30" ReadOnly="True">
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding RowData.RowHandle.Value
                                ,Converter={StaticResource AddValueConverter}
                                ,ConverterParameter=1}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                            </dxg:GridColumn>
                            <dxg:GridColumn Header="รายการสินค้า" FieldName="ItemMasterUID" Width="220">
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>
                                        <dxg:LookUpEdit Name="PART_Editor" 
                                                        ItemsSource="{Binding Path=DataContext.ItemMasters,RelativeSource={RelativeSource AncestorType={x:Type vm:ManagePurchaseOrder}}}"
                                                        SelectedItem="{Binding RowData.Row.SelectItemMaster}"
                                                        PopupHeight="400" PopupWidth="500"
                                                        ValueMember="ItemMasterUID"                                                        
                                                        DisplayMember="Name"
                                                        PopupContentTemplate="{DynamicResource gridItemMasterTemplate}"
                                                        AutoPopulateColumns="False" FilterCondition="Contains">
                                            <dxg:LookUpEdit.StyleSettings>
                                                <dxg:SearchLookUpEditStyleSettings/>
                                            </dxg:LookUpEdit.StyleSettings>
                                            <dxg:LookUpEdit.DisplayTemplate>
                                                <ControlTemplate>
                                                    <TextBlock TextWrapping="Wrap" Text="{Binding RowData.Row.SelectItemMaster.Name}"/>
                                                </ControlTemplate>
                                            </dxg:LookUpEdit.DisplayTemplate>
                                        </dxg:LookUpEdit>
                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                            </dxg:GridColumn>
                            <dxg:GridColumn Header="รหัส" FieldName="ItemCode" ReadOnly="True" Width="70"/>
                            <dxg:GridColumn Header="จำนวน" FieldName="Quantity" Width="80">
                                <dxg:GridColumn.EditSettings>
                                    <dxe:TextEditSettings  Mask="\d{0,9}(\R.\d{0,2})?"  MaskType="RegEx"/>
                                </dxg:GridColumn.EditSettings>
                            </dxg:GridColumn>
                            <dxg:GridColumn Header="หน่วย" FieldName="IMUOMUID">
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>
                                        <dxe:ComboBoxEdit x:Name="PART_Editor" 
                                                          DisplayMember="ConversionUnit"
                                                          ValueMember="ConversionUOMUID"
                                                          ItemsSource="{Binding RowData.Row.StoreUOMConverts}"/>
                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                            </dxg:GridColumn>
                            <dxg:GridColumn Header="ราคาต่อหน่วย" FieldName="UnitPrice">
                                <dxg:GridColumn.EditSettings>
                                    <dxe:TextEditSettings  Mask="\d{0,9}(\R.\d{0,2})?"  MaskType="RegEx"/>
                                </dxg:GridColumn.EditSettings>
                            </dxg:GridColumn>
                            <dxg:GridColumn Header="รวมเป็นเงิน" FieldName="NetAmount" ReadOnly="True"/>
                            <!--<dxg:GridColumn AllowEditing="True" Width="80">
                                <dxg:GridColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="ลบ">
                                            <dxmvvm:Interaction.Behaviors>
                                                <dxmvvm:ConfirmationBehavior EnableConfirmationMessage="True" 
                                         Command="{Binding Path=Commands.DeleteFocusedRow, ElementName=view}"
                                         MessageText="คุณต้องการลบข้อมูลที่เลือก ใช้หรือไม่?"
                                         MessageIcon="Question"/>
                                            </dxmvvm:Interaction.Behaviors>
                                        </Button>
                                    </DataTemplate>
                                </dxg:GridColumn.CellTemplate>
                            </dxg:GridColumn>-->
                        </dxg:GridControl.Columns>
                        <dxg:GridControl.View>
                            <dxg:TableView Name="view" ShowGroupPanel="False" AllowSorting="False" NewItemRowPosition="Top" >
                                <i:Interaction.Triggers>
                                    <i:EventTrigger  EventName="CellValueChanged">
                                        <mvvm:EventToCommand Command="{Binding ChangeValueCommand}" PassEventArgsToCommand="True" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </dxg:TableView>
                        </dxg:GridControl.View>
                    </dxg:GridControl>
                    <dxlc:LayoutGroup Orientation="Horizontal">
                        <dxlc:LayoutItem >
                            <dxlc:LayoutItem.Label>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="*" FontSize="15" Margin="0,-10,0,0"
                                           Foreground="Red"/>
                                    <TextBlock Text="สถานะ" />
                                </StackPanel>
                            </dxlc:LayoutItem.Label>
                            <dxe:ComboBoxEdit 
                                       DisplayMember="Display" ValueMember="Key"
                                      ItemsSource="{Binding POStatus}"
                                      SelectedItem="{Binding SelectPOStatus}"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="หมายเหตุ">
                            <dxe:TextEdit Text="{Binding Comments}"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="รวมเป็นเงิน บาท">
                            <Label Content="{Binding NetAmount}" FontSize="17" FontWeight="Bold"
                                HorizontalContentAlignment="Right"/>
                        </dxlc:LayoutItem>
                    </dxlc:LayoutGroup>
                    <dxlc:LayoutGroup Orientation="Horizontal">
                        <dxlc:LayoutItem />
                        <dxlc:LayoutItem/>
                        <dxlc:LayoutItem Label="ค่าอื่นๆ บาท">
                            <dxe:TextEdit HorizontalContentAlignment="Right" 
                                          EditValue="{Binding OtherChages}"
                                          Mask="\d{0,9}(\R.\d{0,2})?"  MaskType="RegEx"/>
                        </dxlc:LayoutItem>
                    </dxlc:LayoutGroup>
                    <dxlc:LayoutGroup Orientation="Horizontal">
                        <dxlc:LayoutItem />
                        <dxlc:LayoutItem/>
                        <dxlc:LayoutItem Label="ส่วนลด บาท">
                            <dxe:TextEdit HorizontalContentAlignment="Right"
                                          EditValue="{Binding Discount}"
                                          Mask="\d{0,9}(\R.\d{0,2})?"  MaskType="RegEx"/>
                        </dxlc:LayoutItem>
                    </dxlc:LayoutGroup>
                </dxlc:LayoutGroup>
                <dxlc:LayoutGroup  Header="การชำระเงิน" Orientation="Vertical">
                    <dxlc:LayoutGroup Orientation="Horizontal">
                        <dxlc:LayoutItem Label="ชำระเงิน" >
                            <dxe:ComboBoxEdit ItemsSource="{Binding PaymentTypes}"
                                              DisplayMember="Display"
                                              ValueMember="Key"
                                              SelectedItem="{Binding SelectPaymentType}"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="จำนวน">
                            <dxe:TextEdit HorizontalContentAlignment="Right" 
                                          EditValue="{Binding PaymentAmount}"
                                          Mask="\d{0,9}(\R.\d{0,2})?"  MaskType="RegEx"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="หน่วย">
                            <dxe:ComboBoxEdit ItemsSource="{Binding UnitCash}"
                                              DisplayMember="Display"
                                              ValueMember="Key"
                                              SelectedItem="{Binding SelectUnitCash}"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="วันที่">
                            <dxe:DateEdit EditValue="{Binding PaidDttm}"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="ครบกำหนด" Visibility="{Binding IsExpiryPayment}">
                            <dxe:DateEdit EditValue="{Binding ExpiryDttm}" />
                        </dxlc:LayoutItem>
                        <dxlc:LayoutGroup Orientation="Horizontal">
                            <dxlc:LayoutItem >
                                <dx:SimpleButton Width="70" Command="{Binding AddPaymentCommand}"
                                     Height="25" Content="เพิ่ม"/>
                            </dxlc:LayoutItem>
                            <dxlc:LayoutItem >
                                <dx:SimpleButton Width="70" Command="{Binding DeletePaymentCommand}"
                                     Height="25" Content="ลบ"/>
                            </dxlc:LayoutItem>
                        </dxlc:LayoutGroup>

                    </dxlc:LayoutGroup>
                    <dxg:GridControl x:Name="grdPurchasePayment" ItemsSource="{Binding PurchaseOrderPayments}"
                                     SelectedItem="{Binding SelectPurchaseOrderPayment}">
                        <dxg:GridControl.Columns>
                            <dxg:GridColumn Header="ชำระเงิน" FieldName="PaymentType"/>
                            <dxg:GridColumn Header="จำนวน" FieldName="Amount"/>
                            <dxg:GridColumn Header="หน่วย" FieldName="CurrencyType"/>
                            <dxg:GridColumn Header="วันที่จ่าย" FieldName="PaidDttm"/>
                            <dxg:GridColumn Header="ครบกำหนด" FieldName="ExpiryDttm"/>
                        </dxg:GridControl.Columns>
                        <dxg:GridControl.View>
                            <dxg:TableView ShowGroupPanel="False"/>
                        </dxg:GridControl.View>
                    </dxg:GridControl>
                </dxlc:LayoutGroup>

            </dxlc:LayoutGroup>
            <dxlc:LayoutGroup  Orientation="Horizontal">
                <dxlc:LayoutItem>
                    <dxe:CheckEdit Content="พิมพ์" HorizontalAlignment="Center"/>
                </dxlc:LayoutItem>

                <dx:SimpleButton Width="80" Command="{Binding SaveCommand}" HorizontalAlignment="Right"
                                     Height="25" Content="บันทึก"/>
                <dx:SimpleButton Width="80" Command="{Binding CancelCommand}" HorizontalAlignment="Right"
                                     Height="25" Content="ยกเลิก"/>
            </dxlc:LayoutGroup>

        </dxlc:LayoutControl>
    </Grid>
</UserControl>
