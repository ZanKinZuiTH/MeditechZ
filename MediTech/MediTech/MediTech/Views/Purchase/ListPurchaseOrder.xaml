<UserControl xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"   xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"  xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"  xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" x:Class="MediTech.Views.ListPurchaseOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mvvm="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Platform"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             mc:Ignorable="d" 
             DataContext="{Binding Path=ListPurchaseOrderViewModel,Source={StaticResource Locator}}"
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid>
        <dxlc:LayoutControl Orientation="Vertical">
            <dxlc:LayoutGroup Orientation="Horizontal">
                <dxlc:LayoutItem Label="สถานประกอบการ">
                    <dxg:LookUpEdit Name="lkeOrganisation" ItemsSource="{Binding Organisations}" 
                                      SelectedItem="{Binding SelectOrganisation}"
                                      ValueMember="HealthOrganisationUID"
                                      DisplayMember="Name"
                                      AllowNullInput="True"
                                      AutoComplete="True" 
                                      ImmediatePopup="True"
                                      FindButtonPlacement = "Popup"
                                      FindMode = "Always"
                                      PopupMinHeight="100"
                                      PopupMinWidth="100"
                                      PopupHeight="400" 
                                      IsPopupAutoWidth="True"
                                      PopupContentTemplate="{StaticResource HealthOrganisationTemplate}"
                                      AutoPopulateColumns="False">
                        <dxg:LookUpEdit.StyleSettings>
                            <dxg:SearchLookUpEditStyleSettings/>
                        </dxg:LookUpEdit.StyleSettings>
                    </dxg:LookUpEdit>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem Label="จากวันที่">
                    <dxe:DateEdit EditValue="{Binding DateFrom}"/>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem Label="ถึงวันที่">
                    <dxe:DateEdit EditValue="{Binding DateTo}"/>
                </dxlc:LayoutItem>

            </dxlc:LayoutGroup>
            <dxlc:LayoutGroup Orientation="Horizontal">
                <dxlc:LayoutItem Label="Store">
                    <dxe:ComboBoxEdit ItemsSource="{Binding Stores}"
                                      x:Name="cmbStore"
                                      SelectedItem="{Binding SelectStore}"
                                      ValueMember="StoreUID"
                                      DisplayMember="Name"
                                      AutoComplete="True"
                                      AllowNullInput="True"
                                      ImmediatePopup="True"/>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem Label="ผู้จัดจำหน่าย">
                    <dxg:LookUpEdit Name="lkeVendor" ItemsSource="{Binding Vendors}" 
                                      SelectedItem="{Binding SelectVendor}"
                                      ValueMember="VendorDetailUID"
                                      DisplayMember="CompanyName"
                                      AllowNullInput="True"
                                      AutoComplete="True" 
                                      ImmediatePopup="True"
                                      FindButtonPlacement = "Popup"
                                      FindMode = "Always"
                                      PopupMinHeight="100"
                                      PopupMinWidth="100"
                                      PopupHeight="400" 
                                      IsPopupAutoWidth="True"
                                      PopupContentTemplate="{StaticResource VendorTemplate}"
                                      AutoPopulateColumns="False">
                        <dxg:LookUpEdit.StyleSettings>
                            <dxg:SearchLookUpEditStyleSettings/>
                        </dxg:LookUpEdit.StyleSettings>
                    </dxg:LookUpEdit>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem Label="สถานะ">
                    <dxe:ComboBoxEdit DisplayMember="Display" 
                                      ValueMember="Key"
                                      Name="cmbPOStatus"
                                      ItemsSource="{Binding POStatus}"
                                      AllowNullInput="True"
                                      SelectedItem="{Binding SelectPOStatus}"/>
                </dxlc:LayoutItem>

            </dxlc:LayoutGroup>
            <dxlc:LayoutGroup Orientation="Horizontal">
                <dxlc:LayoutItem Label="เลขเอกสารอ้างอิง">
                    <dxe:TextEdit Text="{Binding PONumber}"/>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem/>
                <dxlc:LayoutItem >
                    <dxlc:LayoutGroup Orientation="Horizontal" HorizontalAlignment="Right">
                        <dx:SimpleButton Width="80" Command="{Binding SearchCommand}"
                                     Height="25" Content="ค้นหา"/>
                        <dx:SimpleButton Width="80" Command="{Binding ClearCommand}"
                                     Height="25" Content="คืนค่า"/>
                    </dxlc:LayoutGroup>

                </dxlc:LayoutItem>
            </dxlc:LayoutGroup>

            <dxlc:LayoutGroup Orientation="Horizontal">
                <dxg:GridControl x:Name="grdPurchaseOrder" ItemsSource="{Binding PurchaseOrders}"
                                 SelectedItem="{Binding SelectPurchaseOrder}">
                    <dxg:GridControl.Columns>
                        <dxg:GridColumn Header="สถานะ" FieldName="POStatus" ReadOnly="True"/>
                        <dxg:GridColumn Header="ชื่อผู้จำหน่าย" FieldName="VendorName"  ReadOnly="True"/>
                        <dxg:GridColumn Header="วันที่เปิดใบ PO" FieldName="RequestedDttm"  ReadOnly="True"/>
                        <dxg:GridColumn Header="วันทีต้องการของ" FieldName="RequiredDttm"  ReadOnly="True"/>
                        <dxg:GridColumn Header="ส่งของไปที่" FieldName="HealthOrganisationName"  ReadOnly="True"/>
                        <dxg:GridColumn Header="Store" FieldName="StoreName"  ReadOnly="True"/>
                        <dxg:GridColumn Header="ยอดรวม" FieldName="NetAmount"  ReadOnly="True"/>
                        <dxg:GridColumn Header="ผู้อนุมัติ" FieldName="Approved"  ReadOnly="True"/>
                        <dxg:GridColumn Header="อ้างอิง" FieldName="GRNNumber" ReadOnly="True"/>
                        <dxg:GridColumn Header="หมายเหตุ อนุมัติ" FieldName="ApprovalComments"  ReadOnly="True"/>
                    </dxg:GridControl.Columns>
                    <dxg:GridControl.View>
                        <dxg:TableView ShowGroupPanel="False"/>
                    </dxg:GridControl.View>
                </dxg:GridControl>
                <dxg:GridControl ItemsSource="{Binding PurcaseOrderItemList}"
                                 SelectedItem="{Binding SelectPurchaseOrderItemList}">
                    <dxg:GridControl.Columns>
                        <dxg:GridColumn Header="สินค้า" FieldName="ItemName" ReadOnly="True"/>
                        <dxg:GridColumn Header="จำนวน" FieldName="Quantity" ReadOnly="True"/>
                        <dxg:GridColumn Header="หน่วย" FieldName="Unit" ReadOnly="True"/>
                        <dxg:GridColumn Header="ราคาต่อหน่วย" FieldName="UnitPrice" ReadOnly="True"/>
                    </dxg:GridControl.Columns>
                    <dxg:GridControl.View>
                        <dxg:TableView ShowGroupPanel="False"/>
                    </dxg:GridControl.View>
                </dxg:GridControl>
            </dxlc:LayoutGroup>
            <dxlc:LayoutGroup Orientation="Horizontal" HorizontalAlignment="Right">
                <dx:SimpleButton Width="100" Command="{Binding ApporveCommand}" IsEnabled="{Binding IsEnableAP}"
                                     Height="25" Content="อนุมัติ/ไม่อนุมัติ"/>
                <dx:SimpleButton Width="80" Command="{Binding PrintCommand}"
                                     Height="25" Content="พิมพ์"/>
                <dx:SimpleButton Width="80" Command="{Binding AddCommand}"
                                     Height="25" Content="สร้างใบ PO"/>
                <dx:SimpleButton Width="80" Command="{Binding EditCommand}" IsEnabled="{Binding IsEnableEditPO}"
                                     Height="25" Content="แก้ไขใบ PO"/>
                <dx:SimpleButton Width="80" Command="{Binding DeleteCommand}" IsEnabled="{Binding IsEnableCancelPO}"
                                     Height="25" Content="ยกเลิกใบ PO"/>
                <dx:SimpleButton Width="100" Command="{Binding CreateGRNCommand}" IsEnabled="{Binding IsEnableCreateGRN}"
                                     Height="25" Content="สร้างใบรับสินค้า"/>
            </dxlc:LayoutGroup>
        </dxlc:LayoutControl>
    </Grid>
</UserControl>
